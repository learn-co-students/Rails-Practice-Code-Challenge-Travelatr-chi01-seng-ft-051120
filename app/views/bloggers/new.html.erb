<h1>Create a New Blogger!</h1>
<% if @blogger.errors.any? %>
    <div id="error_explanation">
    <h2>
    <%= pluralize(@blogger.errors.count, "error") %>
    prohibited this blogger from being saved:
    </h2>

    <ul>
    <% @blogger.errors.full_messages.each do |msg| %> 
        <li><%= msg %></li>
    <% end %>
    </ul>
    </div>
<% end %>
<%= form_for @blogger do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :age %>
    <%= f.text_field :age %><br>
    <%= f.label :bio %>
    <%= f.text_area :bio %> <br>
    <%= f.submit %>
<% end %>
